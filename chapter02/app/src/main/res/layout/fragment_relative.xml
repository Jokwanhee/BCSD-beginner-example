<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/point1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/point2"
        android:layout_toStartOf="@id/point2"
        android:background="#E8FFDE"/>
    <TextView
        android:id="@+id/point2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/point4"
        android:layout_above="@id/point5"
        android:background="#CBFFB3"/>
    <TextView
        android:id="@+id/point3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@id/point2"
        android:layout_toEndOf="@id/point2"
        android:background="#A2FF77"/>
    <TextView
        android:id="@+id/point4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toStartOf="@id/point5"
        android:layout_alignBottom="@id/point5"
        android:background="#7DE44D"/>


    <TextView
        android:id="@+id/point5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="#70DA3F" />


    <TextView
        android:id="@+id/point6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/point5"
        android:layout_alignBottom="@id/point5"
        android:background="#75CC4D"/>
    <TextView
        android:id="@+id/point7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toStartOf="@id/point8"
        android:layout_alignTop="@id/point8"
        android:background="#53AE29"/>
    <TextView
        android:id="@+id/point8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/point5"
        android:layout_toStartOf="@id/point6"
        android:background="#459720"/>
    <TextView
        android:id="@+id/point9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/point8"
        android:layout_alignTop="@id/point8"
        android:background="#2C7A08"/>


</RelativeLayout>